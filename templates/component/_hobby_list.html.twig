<div class="list-group list-group-flush bg-white">
    {% for hobby in item.userHobbies|sort((a,b) => a.label <=> b.label) %}
        <a href="{{ url('group_hobby_show',{'slug':hobby.slug}) }}" class="list-group-item ripplelink swipe-link-start list-group-item-action d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center py-3">
            <div class="d-flex align-items-center">
                <i class="ti ti-roller-skating text-primary me-2"></i>
                <div class="text-truncate">{{ hobby }}</div>
            </div>
            <div class="d-flex align-items-center">
                <span class="badge fw-normal text-dark-emphasis bg-secondary-subtle rounded-start-2 d-flex align-items-center">
                                        {{ hobby.userProfiles.count }}
                                        <i class="ti ti-users ms-1"></i>
                                    </span>
                <span class="badge fw-normal text-dark-emphasis bg-secondary-subtle d-flex align-items-center">
                                        {{ hobby.events.count }}
                                        <i class="ti ti-calendar-event ms-1"></i>
                                    </span>
                <span class="badge fw-normal text-dark-emphasis bg-secondary-subtle d-flex align-items-center">
                                        {{ hobby.personOffers.count }}
                                        <i class="ti ti-briefcase ms-1"></i>
                                    </span>
                <span class="badge fw-normal text-primary bg-primary-subtle rounded-end-2 d-flex align-items-center">
                                        {{ hobby.groupSubjects.count }}
                                        <i class="ti ti-message-2 ms-1"></i>
                                    </span>
            </div>

        </a>
    {% endfor %}
</div>