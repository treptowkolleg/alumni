<div class="list-group-item  d-flex align-items-center p-0">
    <a href="{{ path('event_show',{'slug':post.slug}) }}" class="ripplelink swipe-link-start w-100 d-flex align-items-center justify-content-between p-3 text-decoration-none">
        <div class="d-flex flex-column">
            <div class="d-inline-block fw-bold text-wrap">{{ post }}</div>
            <div class="me-2 d-block d-lg-none">{{ post.startDate|date('d.m.Y') }}{% if post.endDate|date('d.m.Y') != post.startDate|date('d.m.Y') %} - {{ post.endDate|date('d.m.Y') }}{% endif %}</div>
            <div class="small text-muted text-truncate" style="max-width: 220px">{{ post.location|split(',').0 }}</div>

        </div>
        <div class="d-flex align-items-center">
            <div class="d-none d-lg-block badge text-bg-light rounded-pill fw-normal me-1">{{ post.startDate|date('d.m.Y') }}{% if post.endDate|date('d.m.Y') != post.startDate|date('d.m.Y') %} - {{ post.endDate|date('d.m.Y') }}{% endif %}</div>
            <i class="ri ri-arrow-right-s-line"></i>
        </div>
    </a>
    {% if app.user %}
        <a href="#" class="ripplelink text-decoration-none text-secondary align-self-stretch event-follow-btn"  data-url="{{ url('api_event_follow_toggle') }}" data-id="{{ post.id }}">
            <div class="p-3 d-flex align-items-center h-100">
                <div class="text-primary spinner-border spinner-border-sm d-none loader-{{ post.id }}" role="status" style="width: 18px!important;"></div>
                <i class="ri ri-star-{{ app.user.followedEvents.contains(post) == true ? 'fill' : 'line' }} event-follow-icon-{{ post.id }}" style="width: 18px!important;"></i>
            </div>
        </a>
    {% endif %}
</div>