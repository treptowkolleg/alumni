{% extends '_full.html.twig' %}

{% set meta_title = 'Mein Portal' %}
{% set meta_subtitle = 'Postfach' %}
{% set sidebar = 'profile-chat' %}

{% block page_header %}
    <section class="py-3">
        <div class="container">
            {{ include('component/profile_subbar.html.twig',{'selected':'chat'}) }}

            {{ form_start(form) }}
            <div class="row g-3">

                <div class="col-lg-12">
                    <div class="d-flex flex-column flex-lg-row">
                        <a class="btn btn-light ms-0 ms-lg-2 mt-3 mt-lg-0" href="{{ url('chat_start',{'slug':partner.slug}) }}"><i class="fas fa-chevron-left me-2 text-primary"></i>Zur√ºck zum Postfach</a>
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="card bg-white">
                        <div class="card-body  border-bottom border-primary">
                            <h3 class="h5 mb-0 text-center text-lg-start text-truncate">Nachricht schreiben</h3>
                            <div class="text-center text-lg-start fw-bolder text-primary text-truncate"><a href="{{ url('people_show',{'slug':partner.slug}) }}" class=" text-decoration-none"><i class="bx bx-user me-1"></i>{{ partner.userprofiles.first }}</a></div>
                        </div>
                        <div class="card-body">

                            <div class="row g-3">
                                {{ form_row(form.subject) }}
                                {{ form_row(form.message) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <button type="submit" class="{{ partner.isContactable ?: 'disabled' }} btn btn-primary w-100">
                        <i class="fa-regular fa-paper-plane me-2"></i>
                        Nachricht senden
                    </button>
                </div>

            </div>
            {{ form_end(form) }}
        </div>
    </section>

{% endblock %}

{% block body %}{% endblock %}
{% block aside %}{% endblock %}