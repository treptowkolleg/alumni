{% extends '_full.html.twig' %}

{% set meta_title = 'Mein Portal' %}
{% set meta_subtitle = 'Postfach' %}
{% set sidebar = 'profile-chat' %}

{% set seo_title = 'Nachricht lesen' %}

{% block page_header %}
<section class="py-3">
    <div class="container">
        {{ include('component/profile_subbar.html.twig',{'selected':'chat'}) }}

        <div class="row g-3">


            <div class="col-lg-12">
                <div class="d-flex flex-column flex-lg-row">
                    <a class="btn btn-light rounded-2"  href="{{ url('chat_start') }}"><i class="fas fa-chevron-left me-2 text-primary"></i>Zurück zum Postfach</a>
                </div>
            </div>

            <div class="col-lg-12">
                <div class="card bg-light-subtle border-0 rounded-2 shadow-sm">
                    <div class="card-body  border-bottom border-primary">
                        <div class="text-truncate">Von <a href="{{ url('people_show',{'slug':message.sender.slug}) }}" class=" text-decoration-none"><i class="bx bx-user me-1"></i>{{ message.sender.userprofiles.first }}</a></div>
                        <div class="text-truncate">An <a href="{{ url('people_show',{'slug':message.recipient.slug}) }}" class=" text-decoration-none"><i class="bx bx-user me-1"></i>{{ message.recipient.userprofiles.first }}</a></div>
                    </div>
                    <div class="card-body bg-white">
                        <div class="fw-bolder">{{ message.title }}</div>
                        <div class="pb-3 mb-3">{{ message.content|striptags|nl2br }}</div>
                    </div>
                    <div class="card-body border-top rounded-bottom py-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-center text-lg-start small text-muted">{{ message.created|ago }} gesendet</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <a href="#" class="disabled text-decoration-none"><i class="ri ri-arrow-left-s-line me-1"></i>Vorherige</a>
                    <a href="#" class="text-decoration-none">Nächste<i class="ri ri-arrow-right-s-line ms-1"></i></a>
                </div>
            </div>

        </div>
    </div>
</section>






{% endblock %}

{% block body %}{% endblock %}
{% block aside %}{% endblock %}