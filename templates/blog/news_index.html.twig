{% extends '_full.html.twig' %}

{% set meta_title = 'Nachrichten' %}
{% set meta_subtitle = 'Beitrags√ºbersicht' %}

{% set sidebar = 'news' %}

{% block page_header %}
<section class="py-3">
    <div class="container">

        {{ include('component/news_subbar.html.twig',{'selected':'index'}) }}

        <div class="row g-3">

            <div class="col-lg-9">
                {% for post in posts %}
                    {% if post.isPublished %}
                        <div class="col">
                            <div class="card border-0 mb-3 border-bottom h-100">
                                <div class="row g-1">
                                    {% if post.blogPostImageUrl %}
                                        <div class="col-12 col-lg-4 order-1 order-lg-0">
                                            <img src="{{ asset(post.blogPostImageUrl)|imagine_filter('post_thumbnail')  }}" alt="{{ post }}" class="img-fluid">
                                        </div>
                                        <div class="col-12 col-lg-8 order-0 order-lg-2">
                                            <div class="card-body">
                                                <div class="mb-0"><span>{{ post.updatedAt|date('d.m.Y') }}</span> | <span class="text-uppercase">{{ post.type }}</span></div>
                                                <a href="{{ path('blog_news_show',{'slug':post.slug}) }}" class="fs-4 card-link stretched-link text-decoration-none">{{ post }}</a>
                                                <div class="d-none d-lg-block">
                                                    <div class="d-block text-truncate fs-6 text-wrap">{{ post.content|striptags|u.truncate(200) }}...</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 d-block d-lg-none order-2">
                                            <div class="card-body">
                                                <div class="d-block text-truncate fs-6 text-wrap">{{ post.content|striptags|u.truncate(200) }}...</div>
                                            </div>
                                        </div>

                                    {% else %}
                                        <div class="col-12">
                                            <div class="card-body">
                                                <div class="mb-0"><span>{{ post.updatedAt|date('d.m.Y') }}</span> | <span class="text-uppercase">{{ post.type }}</span></div>
                                                <a href="{{ path('blog_news_show',{'slug':post.slug}) }}" class="fs-4 card-link stretched-link text-decoration-none">{{ post }}</a>
                                                <div class="d-block text-truncate fs-6 text-wrap">{{ post.content|striptags|u.truncate(200) }}...</div>
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>

                            </div>
                        </div>
                    {% endif %}
                {% else %}
                    <div class="col">
                        Aktuell sind keine Meldungen vorhanden
                    </div>
                {% endfor %}
            </div>
            <div class="col-lg-3"></div>
        </div>

        <div class="row g-3 py-3">
            <div class="col-12">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</section>
{% endblock %}
