{% extends '_full.html.twig' %}

{% set meta_title = 'Stellenangebote' %}
{% set meta_subtitle = 'Übersicht' %}
{% set meta_description = 'Finde und vernetze dich mit Alumni und den ehemaligen Lehrkräften der teilnehmenden Schulen und Kollegs des zweiten Bildungsweges.' %}

{% set seo_title = 'Vernetze dich mit anderen Personen' %}

{% set sidebar = 'offers' %}

{% block page_header %}
    <section class="py-3">
        <div class="container">

            {{ include('component/offer_subbar.html.twig') }}

            <div class="mb-3">{{ include('component/_offer_filter.html.twig') }}</div>

            <div class="col-12 order-3">
                <div class="card bg-light-subtle border-0 shadow-sm rounded rounded-2">
                    <div class="card-body  border-bottom border-primary">
                        <h3 class="h6 mb-0">Ergebnis</h3>
                    </div>
                    <div class="list-group list-group-flush border-bottom bg-white">
                        {% for offer in offers %}
                            {{ include('component/_offer_fav_list.html.twig') }}
                        {% endfor %}
                    </div>
                    <div class="card-body"></div>
                </div>
            </div>

        </div>
    </section>

{% endblock %}

{% block body %}{% endblock %}

{% block aside %}{% endblock %}