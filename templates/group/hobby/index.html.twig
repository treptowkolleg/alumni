{% extends '_full.html.twig' %}

{% set meta_title = 'Gruppen' %}
{% set meta_subtitle = 'Hobbies' %}
{% set meta_description = 'Finde und vernetze dich mit Alumni und den ehemaligen Lehrkr√§ften der teilnehmenden Schulen und Kollegs des zweiten Bildungsweges.' %}

{% set seo_title = 'Vernetze dich mit anderen Personen' %}

{% set sidebar = 'groups' %}

{% block page_header %}
    <section class="py-3">
        <div class="container py-5">

            <div class="row g-3">
                <div class="col-12 mb-3">
                    <div class="card bg-light-subtle border-0 shadow-sm rounded rounded-2">
                        <div class="card-body  border-bottom border-primary">
                            <h3 class="h6 mb-0">Hobbies</h3>
                        </div>
                        <div class="list-group list-group-flush border-bottom bg-white">
                            {% for category in hobby_categories %}
                                {% set x = 0 %}
                                {% for hobby in category.hobbies %}
                                    {% if hobby.userProfiles.count > 0 %}
                                        {% if x == 0 %}
                                            <div class="list-group-item bg-light-subtle">
                                                <span class="text-primary">{{ category }}</span>
                                            </div>
                                            {% set x = 1 %}
                                        {% endif %}
                                        <a href="#" class="list-group-item ripplelink swipe-link-start list-group-item-action d-flex justify-content-start align-items-center py-3">
                                            <i class="ti ti-activity text-primary me-2"></i>
                                            <span>{{ hobby }}</span>
                                            <span class="ms-auto badge fw-normal text-primary bg-primary-subtle rounded-2">{{ hobby.userProfiles.count }}</span>
                                            <i class="ti ti-chevron-right ms-2"></i>
                                        </a>
                                    {% endif %}
                                {% endfor %}
                            {% endfor %}
                        </div>
                        <div class="card-body"></div>
                    </div>
                </div>

                <div class="col-12 mb-3">
                    <div class="card bg-light-subtle border-0 shadow-sm rounded rounded-2">
                        <div class="card-body  border-bottom border-primary">
                            <h3 class="h6 mb-0">Berufliche Interessen</h3>
                        </div>
                        <div class="list-group list-group-flush border-bottom bg-white">
                            {% for category in interest_categories %}
                                {% set x = 0 %}
                                {% for hobby in category.interests %}
                                    {% if hobby.userProfiles.count > 0 %}
                                        {% if x == 0 %}
                                            <div class="list-group-item bg-light-subtle">
                                                <span class="text-primary">{{ category }}</span>
                                            </div>
                                            {% set x = 1 %}
                                        {% endif %}
                                        <a href="#" class="list-group-item ripplelink swipe-link-start list-group-item-action d-flex justify-content-start align-items-center py-3">
                                            <i class="ti ti-activity text-primary me-2"></i>
                                            <span>{{ hobby }}</span>
                                            <span class="ms-auto badge fw-normal text-primary bg-primary-subtle rounded-2">{{ hobby.userProfiles.count }}</span>
                                            <i class="ti ti-chevron-right ms-2"></i>
                                        </a>
                                    {% endif %}
                                {% endfor %}
                            {% endfor %}
                        </div>
                        <div class="card-body"></div>
                    </div>
                </div>
            </div>



        </div>
    </section>

{% endblock %}

{% block body %}{% endblock %}

{% block aside %}{% endblock %}