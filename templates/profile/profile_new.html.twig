{% extends '_full.html.twig' %}

{% set meta_title = 'Mein Bereich' %}
{% set meta_subtitle = 'Alumni-Profil' %}
{% set sidebar = 'profile-info' %}

{% block page_header %}
<section class=" py-3">
    <div class="container">

        <div class="">
            <div class="nav nav-underline">
                    <a href="{{ path('profile_index') }}" class="nav-item nav-link text-nowrap">
                        <i class="fa-solid fa-chevron-left text-primary"></i>
                        <span class="ms-1">Zur Übersicht</span>
                    </a>
            </div>
        </div>

        {{ form_start(form, { 'attr': {'novalidate':'novalidate'} }) }}

        <div class="row">
            <div class="col-lg-2 pt-lg-3">
                <ul class="list-unstyled sticky-top d-none d-lg-block" style="top: 128px">
                    <li class="">
                        <strong class="fw-semibold">
                            <i class="fa-solid fa-fw text-primary fa-newspaper me-1"></i>Abschnitte
                        </strong>
                        <ul class="list-unstyled fw-normal pb-2">
                            <li><a href="#section-school" class="bd-links-link d-inline-block rounded">Schule</a></li>
                            <li><a href="#section-vita" class="bd-links-link d-inline-block rounded">Kurzvita</a></li>
                            <li><a href="#section-uni" class="bd-links-link d-inline-block rounded">Studium</a></li>
                            <li><a href="#section-work" class="bd-links-link d-inline-block rounded">Beruf</a></li>
                            <li><a href="#section-security" class="bd-links-link d-inline-block rounded">Privatsphäre</a></li>
                        </ul>
                    </li>
                </ul>

            </div>
            <div class="col-lg-10">
                <div class="row g-3 align-content-stretch">



                    <div class="col-lg-12" id="section-school">
                        {{ form_errors(form) }}
                    </div>

                    <div class="col-lg-12">
                        <div class="card bg-white">
                            <div class="card-body  border-bottom border-primary">
                                <h3 class="h5 mb-0 text-center text-lg-start">Schule</h3>
                            </div>
                            <div class="card-body">
                                <div class="row row-cols-2 g-3 mb-3">
                                    <div class="col">{{ form_row(form.inYear) }}</div>
                                    <div class="col">{{ form_row(form.outYear) }}</div>
                                </div>
                                <div class="row row-cols-1 g-3 mb-3">
                                    {{ form_row(form.examType) }}
                                </div>
                                <div class="row row-cols-1 row-cols-lg-2 g-3">
                                    {{ form_row(form.performanceCourse) }}
                                    {{ form_row(form.favoriteSchoolSubjects) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12" id="section-vita">
                        <div class="card bg-white">
                            <div class="card-body  border-bottom border-primary">
                                <h3 class="h5 mb-0 text-center text-lg-start">Kurzvita</h3>
                            </div>
                            <div class="card-body">
                                <div class="row row-cols-1 g-3 mb-3">
                                    {{ form_row(form.about) }}
                                    {{ form_row(form.hobbies) }}
                                    {{ form_row(form.portfolioLink) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12" id="section-uni">
                        <div class="card bg-white">
                            <div class="card-body  border-bottom border-primary">
                                <h3 class="h5 mb-0 text-center text-lg-start">Studium</h3>
                            </div>
                            <div class="card-body">
                                <div class="row row-cols-1 row-cols-lg-2 g-3">
                                    {{ form_row(form.studium) }}
                                    {{ form_row(form.university) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12" id="section-work">
                        <div class="card bg-white">
                            <div class="card-body  border-bottom border-primary">
                                <h3 class="h5 mb-0 text-center text-lg-start">Beruf</h3>
                            </div>
                            <div class="card-body">
                                <div class="row row-cols-1 row-cols-lg-2 g-3 mb-3">
                                    {{ form_row(form.currentProfession) }}
                                    {{ form_row(form.currentCompany) }}
                                </div>
                                {{ form_row(form.interests) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12" id="section-security">
                        <div class="card bg-white">
                            <div class="card-body  border-bottom border-primary">
                                <h3 class="h5 mb-0 text-center text-lg-start">Sichtbarkeit</h3>
                            </div>
                            <div class="card-body">
                                <div class="row row-cols-1 row-cols-lg-2 g-3 mb-5">
                                    {{ form_row(form.networkState) }}
                                    {{ form_row(form.displayName) }}
                                </div>
                                <div class="">
                                    <div class="row g-3">
                                        <div class="col-lg-6"><button type="submit" class="btn btn-primary w-100">Speichern</button></div>
                                        <div class="col-lg-6"><a href="{{ path('profile_index') }}" class="btn btn-light w-100">Abbrechen</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>



                </div>
            </div>
        </div>


        {{ form_end(form) }}
    </div>
</section>


{% endblock %}

{% block body %}{% endblock %}
{% block aside %}{% endblock %}

