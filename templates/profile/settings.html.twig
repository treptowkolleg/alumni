{% extends '_full.html.twig' %}

{% set meta_title = 'Konto' %}
{% set meta_subtitle = 'Einstellungen' %}
{% set sidebar = 'profile-info' %}

{% block page_header %}
<section class="py-3">
    <div class="container">

        {{ include('component/profile_subbar.html.twig',{'selected':'account'}) }}

        <div class="row g-3">
            <div class="col-lg-12">
                <div class="card bg-white">
                    <div class="card-body  border-bottom border-primary">
                        <h3 class="h5 text-center text-lg-start">Konto</h3>
                        <p class="card-text text-center text-lg-start text-primary">Einstellungen und Daten anpassen</p>
                    </div>
                    <div class="list-group list-group-flush">
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                            <span class="d-flex align-items-center"><i class="bx bx-user bx-fw text-primary"></i>Persönliche Angaben</span>
                            <i class="bx bxs-chevron-right text-primary"></i>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                            <span class="d-flex align-items-center"><i class="bx bx-lock bx-fw text-primary"></i>Zugangsdaten</span>
                            <i class="bx bxs-chevron-right text-primary"></i>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3 disabled">
                            <span class="d-flex align-items-center"><i class="bx bx-brush-alt bx-fw text-primary"></i>Layout und Design</span>
                            <div class="d-flex align-items-center">
                                <span class="me-2 badge bg-warning-subtle text-warning rounded">in Planung</span>
                                <i class="bx bxs-chevron-right text-primary"></i>
                            </div>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                            <span class="d-flex align-items-center"><i class="bx bx-shield bx-fw text-primary"></i>Privatsphäre</span>
                            <i class="bx bxs-chevron-right text-primary"></i>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                            <span class="d-flex align-items-center"><i class="bx bx-news bx-fw text-primary"></i>Newsletter</span>
                            <i class="bx bxs-chevron-right text-primary"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-12">
                <div class="card bg-white">
                    <div class="card-body  border-bottom border-primary">
                        <h3 class="h5 text-center text-lg-start">Browserdaten</h3>
                        <p class="card-text text-center text-lg-start text-primary">Von uns gespeicherte Cookies</p>
                    </div>
                    <div class="list-group list-group-flush">
                        {% for cookie, content in cookies %}
                            <div class="list-group-item d-flex flex-wrap align-items-center py-3">
                                <span class="fw-bold">{{ cookie|trans }}:</span>
                                <div class="d-flex justify-content-between justify-content-lg-end align-items-center flex-fill">
                                    <div class="">{{ content }}</div>
                                    <a href="#" class="link-danger ms-3"><i class="bx bx-trash"></i></a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="card-body">
                        <p class="card-text small fst-italic text-muted text-center text-lg-start">
                            Das Löschen der Session-ID führt dazu, dass du ausgeloggt wirst.
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>


{% endblock %}

{% block body %}{% endblock %}
{% block aside %}{% endblock %}

